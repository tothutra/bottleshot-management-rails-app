<div class="col-lg-12">
  <%= form_for([@user, @bottleshot], html: {:class => 'form-horizontal'})  do |f| %>
      <% if @bottleshot.errors.any? %>
        <% @bottleshot.errors.each do |message| %>
          <p class="notice"><%= message %> can't be blank</p>
        <% end %>
      <% end %>
    <div class="row">
      <div class="col-md-4"></div>
      <div class="col-md-4">
        <div class="">
          <div class="field input-group form-group">
            <h5><%= f.label :varietal, "Varietal Name: "%> <%= f.text_field :varietal %></h5>     
          </div>
          <div class="field input-group form-group">
            <h5><%= f.label :vintage, "Vintage Year: "%> <%= f.number_field :vintage %></h5>
          </div> 
          <div class="field input-group form-group">       
            <h5><%= f.check_box :screenprinted %> <%= f.label :screenprinted, "  Check If Your Label Screenprinted" %></h5>
          </div>
          <div class="field input-group form-group">
            <h5><%= f.label :label_file, "URL To Label File: "%> <%= f.text_field :label_file %></h5>
          </div>  
        </div>
      </div>
      <div class="col-md-4"></div>
    </div>

    <div class="row">
      <div class="field input-group form-group radio col-md-4">
        <h5><%= f.label :bottle_shape_id, "Choose Your Bottle Shape: " %></h5>
        <ul>
          <%= f.collection_radio_buttons(:bottle_shape_id, BottleShape.all, :id, :name) do |b| %>
            <li><%= b.radio_button %><%= b.label class:"label-radio" %></li>
          <% end %>
        </ul>
      </div>
      <div class="field input-group form-group radio col-md-4">
        <ul>
          <h5><%= f.label :glass_color_id, "Choose Your Glass Color: " %></h5>
          <%= f.collection_radio_buttons(:glass_color_id, GlassColor.all, :id, :name) do |b| %>
            <li><%= b.radio_button %><%= b.label class:"label-radio" %></li>
          <% end %>
        </ul>
      </div>
      <div class="field input-group form-group radio col-md-4">
        <ul>
          <h5><%= f.label :wine_color_id, "Choose Your Wine Color: " %></h5>
          <%= f.collection_radio_buttons(:wine_color_id, WineColor.all, :id, :name) do |b| %>
            <li><%= b.radio_button %><%= b.label class:"label-radio" %></li>
          <% end %>
        </ul>
      </div>
    </div>

    <div class="row">
      <div class="field input-group form-group radio col-md-4">
        <h5><%= f.label :capsule_id, "Choose Your Capsule: " %></h5>
        <ul>
          <%= f.collection_radio_buttons(:capsule_id, Capsule.all, :id, :name) do |b| %>
            <li><%= b.radio_button %><%= b.label class:"label-radio" %></li>
          <% end %>
        </ul>
      </div>
      <div class="field input-group form-group radio col-md-4">
        <h5><%= f.label :paperstock_id, "Choose Your Label Paperstock: " %></h5>
        <ul>
          <%= f.collection_radio_buttons(:paperstock_id, Paperstock.all, :id, :name) do |b| %>
            <li><%= b.radio_button %><%= b.label class:"label-radio" %></li>
          <% end %>
        </ul>
      </div>
      <div class="field input-group form-group radio col-md-4">
        <h5><%= f.label :label_finish_id, "Choose Your Label Finish: " %></h5>
        <ul>
          <%= f.collection_radio_buttons(:label_finish_id, LabelFinish.all, :id, :name) do |b| %>
            <li><%= b.radio_button %><%= b.label class:"label-radio" %></li>
          <% end %>
        </ul>
      </div>
    </div> 
    <center><%= f.submit class: "btn btn-primary btn-lg" %></center>
  <% end %>
</div>